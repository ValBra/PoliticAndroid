<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars = "horizontal"
    android:scrollbarStyle="insideInset"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll16"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/desinsc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="On pense que vous êtes mort. Vous êtes donc désinscrit de l'établissement. Armé de votre brevet des collèges, vous cherchez longuement du travail et vous terminez caissier chez Leader Price"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/button61"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Rejouer" />

    <Button
        android:id="@+id/button62"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Retour au menu" />

</LinearLayout></ScrollView>