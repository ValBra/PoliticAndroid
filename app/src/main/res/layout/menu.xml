<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo23"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonx1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jouer"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/buttonx2"
        android:layout_alignStart="@+id/buttonx2" />


    <Button
        android:id="@+id/buttonx2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="A Propos"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/buttonx1"
        android:layout_alignLeft="@+id/buttonx3"
        android:layout_alignStart="@+id/buttonx3" />

    <Button
        android:id="@+id/buttonx3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CrÃ©dits"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/buttonx2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonx4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Noter l'application"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/buttonx3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/logoapp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/buttonx4"
        android:layout_alignLeft="@+id/buttonx4"
        android:layout_alignStart="@+id/buttonx4"
        android:layout_marginTop="7dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:srcCompat="@drawable/fb"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginBottom="8dp" />

</RelativeLayout>